<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.lanou.domain.CrmPost" table="crm_post" schema="crm">
        <id name="postId">
            <column name="postId" sql-type="varchar(255)"/>
            <generator class="uuid"/>
        </id>
        <property name="postName">
            <column name="postName" sql-type="varchar(100)" length="100" />
        </property>

        <many-to-one name="crmDepartment" class="com.lanou.domain.CrmDepartment" column="depId"  lazy="false" />
    </class>
</hibernate-mapping>